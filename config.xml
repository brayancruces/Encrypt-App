<?xml version='1.0' encoding='utf-8'?>
<widget id="com.upc.upclab.encryptapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Encrypt-App</name>
    <description>
    Aplicación académica para encriptar y comprimir texto.
    </description>
    <author email="saintplay96@gmail.com" href="http://github.com/saintplay">
        Diego Jara Palomino
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.1.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.4.0" />
    <engine name="browser" spec="~4.1.0" />
</widget>
